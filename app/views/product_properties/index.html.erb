<p id="notice"><%= notice %></p>

<h1>product_proprties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_properties.each do |product_property| %>
      <tr>
        <td><%= product_property.name %></td>
        <td><%= link_to 'Show', product_product_property_path(@product, product_property) %></td>
        <td><%= link_to 'Edit', edit_product_product_property_path(@product, product_property) %></td>
        <td><%= link_to 'Destroy', product_product_property_path(@product, product_property), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New product_property', new_product_product_property_path(@product) %>
